<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="6dp"
    android:clickable="true"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="96dp">


        <ImageView
            android:id="@+id/imagenLocal"
            android:layout_width="58dp"
            android:layout_height="64dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/equipoLocal"
            android:layout_width="67dp"
            android:layout_height="47dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="48dp"
            android:gravity="center"
            android:text="Local"
            android:textSize="12dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/imagenLocal"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/equipoVisitante"
            android:layout_width="67dp"
            android:layout_height="47dp"
            android:layout_marginStart="92dp"
            android:layout_marginTop="48dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="Visitante"
            android:textSize="12dp"
            app:layout_constraintStart_toEndOf="@+id/equipoLocal"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imagenVisitante"
            android:layout_width="58dp"
            android:layout_height="64dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="32dp"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toEndOf="@+id/equipoVisitante"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvCompeticion"
            android:layout_width="160dp"
            android:layout_height="26dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Competicion"
            android:textSize="12dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvResultado"
            android:layout_width="40dp"
            android:layout_height="29dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="0-0"
            android:textSize="12dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toStartOf="@+id/equipoVisitante"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/equipoLocal"
            app:layout_constraintTop_toBottomOf="@+id/tvCompeticion" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>